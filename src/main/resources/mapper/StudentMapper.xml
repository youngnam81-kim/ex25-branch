<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kim.ex25_branch.mapper.StudentMapper">

    <select id="selectAllStudents" resultType="Student">
        SELECT id,name,email,age,created_at,updated_at, FROM student
    </select>
    
    <select id="selectFindStudentById" resultType="Student" parameterType="Long">
        SELECT id,name,email,age,created_at,updated_at FROM student WHERE id=#{id}
    </select>
    
    <insert id="insertStudent" parameterType="Student">
        INSERT INTO student (name,email,age,created_at,updated_at)
        VALUES (#{name}, #{email}, #{age}, sysdate, sysdate)
    </insert>
    
    <update id="updateStudent" parameterType="Student">
        UPDATE student
        SET name = #{name}, email = #{email}, age = #{age}, updated_at = sysdate
        WHERE id = #{id}
    </update>
    
    <delete id="deleteStudentById" parameterType="Long">
        DELETE FROM student WHERE id = #{id}
    </delete>
    
    <delete id="deleteStudent" parameterType="Student">
        DELETE FROM student WHERE id = #{id}
    </delete>
    
</mapper>